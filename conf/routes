# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /getAll                     controllers.GetAllController.getAll
GET     /getInfo/:id                controllers.GetStationInfoStatistics.getStationInfo(id: Int)
GET     /getStationsForQuality/:id  controllers.GetStationsForAirQuality.getStationsForAirQuality(id: Int)
GET     /getReportForCity/:name     controllers.GetInfoForCity.getStationInfo(name: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

